@page "/"

<PageTitle>Home</PageTitle>

<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Info" Size="Size.Large">
                <MudIcon Icon="@Icons.Custom.Brands.MicrosoftAzure" Size="Size.Large" />
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h5">
                <MudLink Href="https://www.nuget.org/packages/Azure.AI.OpenAI" Target="_blank">
                    Azure.AI.OpenAI
                </MudLink>
            </MudText>
            <MudText Typo="Typo.h6">Blazor 💜 OpenAI</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardMedia Image="bing-generated.jpg" Height="580" />
    <MudCardContent>
        <MudText Typo="Typo.body2">
            @(Azure.OpenAI.Shared.Resources.DataDictionary.BingImageText) <MudLink Href="https://www.bing.com/images/create/" Target="_blank">Bing - Image Creater (powered by DALL-E)</MudLink>.
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Size="Size.Large" Target="_blank"
                       Href="https://github.com/Azure/azure-sdk-for-net" Title="GitHub link for the Azure .NET SDK." />
        <MudIconButton Icon="@Icons.Material.Filled.GetApp" Size="Size.Large" Target="_blank"
                       Href="https://www.nuget.org/packages/Azure.AI.OpenAI" Title="NuGet link for Azure.AI.OpenAI" />
        <MudIconButton Icon="@Icons.Custom.Brands.Microsoft" Size="Size.Large" Target="_blank"
                       Href="https://learn.microsoft.com/azure/cognitive-services/openai" 
                       Title="Microsoft Learn link for Azure OpenAI." />
        <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Size="Size.Large" Target="_blank"
                       Href="https://www.mudblazor.com/" Title="MudBlazor link." />
    </MudCardActions>
</MudCard>

